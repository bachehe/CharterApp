<Window x:Class="CharterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharterApp" xmlns:views="clr-namespace:CharterApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Menu -->
        <DockPanel Grid.ColumnSpan="2" Grid.Row="0">
            <Menu DockPanel.Dock="Top" FontSize="15">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Info" />
                </MenuItem>
                <MenuItem Header="_Variable">
                    <MenuItem Header="_Calculate" />
                    <MenuItem Header="_Database" />
                    <Separator />
                    <MenuItem Header="_Info" />
                </MenuItem>
            </Menu>
        </DockPanel>


        <!-- Left Bar -->
        <Grid Grid.Row="1" Grid.Column="0">
            <StackPanel Margin="50 100 0 0">
                <TextBlock FontSize="20" Text="Geometry"/>
                <ComboBox HorizontalAlignment="Left" Width="150" FontSize="20" Margin="0 10 0 50">
                    <ComboBoxItem Content="BB"/>
                    <ComboBoxItem Content="SKP"/>
                    <ComboBoxItem Content="STRESS"/>
                </ComboBox>

                <TextBlock FontSize="20" Text="Wave Value"/>
                <ComboBox HorizontalAlignment="Left" Width="150" FontSize="20" Margin="0 10 0 50">
                    <ComboBoxItem Content="Single"/>
                    <ComboBoxItem Content="Complex"/>
                </ComboBox>
            </StackPanel>

        </Grid>

        <!-- Graph View -->
        <views:GraphView Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
